generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
id          Int       @id @default(autoincrement())
firstName   String    
lastName    String?
email       String    @unique
password    String  
reponses    Response[]  
}


model Question{
id          Int      @id @default(autoincrement())
title       String
description  String
isRequired   Boolean  @default(false)
inputType    String
responses    Response[]
options      Option[]

}

model Response{
id         Int       @id @default(autoincrement())
value      String
user       User      @relation(fields:[userId],references:[id])
userId     Int
questions  Question  @relation(fields:[questionId],references:[id])
questionId Int   

}

model Option{
id         Int       @id @default(autoincrement())
value      String
questions  Question  @relation(fields:[questionId],references:[id])
questionId Int    
}    


